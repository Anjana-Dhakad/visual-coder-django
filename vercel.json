{
  "version": 2,
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    },
    {
      "src": "visual_coder_backend/wsgi.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "visual_coder_backend/wsgi.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/__vercel_render_python?path=$1"
    }
  ]
}